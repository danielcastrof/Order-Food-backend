// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String
  name     String
  phone    String
  status   Boolean
  points   Float
  role Role @default(GUEST)
  order Order[]

  @@map("users")
}

enum Role{
  USER
  GUEST
  EMPLOYEE
  ADMIN

  @@map("_Role")
}

model Item {
  id String @id @default(uuid())

  name     String
  description String @db.VarChar(800)
  price  Float

  order Order[]
  @@map("items")
}

model Order {
  id String @id @default(uuid())

  items Item[]
  total Float
  qtd Int
  status Boolean
  finished Boolean
  author User @relation(fields: [authorId], references: [id])
  authorId String
  obs String @db.VarChar(800)

  @@map("order")
}
